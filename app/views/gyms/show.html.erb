<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= @gym.name.titleize %>
          <div class="pull-right">$<%= @gym.rate %></div>
        </h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-6">
            <%= image_tag @gym.image_url, class: 'img-responsive' %>
          </div>
          <div class="col-md-6">
            <dl class="dl-horizontal">
              <dt>Address</dt>
              <dd><%= @gym.address %></dd>
              <dd><%= @gym.city.capitalize %>, <%= @gym.state.upcase %></dd>
              <dd><%= @gym.zip %></dd>

              <hr>

              <dt>Phone</dt>
              <dd><%= @gym.phone %></dd>

              <dt>Website</dt>
              <dd><%= link_to @gym.website %></dd>

              <dt>Email</dt>
              <dd><%= @gym.email %></dd>

              <hr>

              <dt>Feature</dt>
              <dd><%= @gym.feature.name %></dd>
            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to 'Purchase Pass', 'http://www.paypal.com', class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
