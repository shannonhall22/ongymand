<%= simple_form_for(@gym) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>
    <%= f.input :image_url %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :rate %>
      </div>
      <div class="col-md-6">
        <%= f.association :feature, collection: Feature.all, label_method: :name, value_method: :id %>
      </div>
    </div>

    <hr>

    <h5>Location:</h5>
    <div class="row">
      <div class="col-md-12">
        <%= f.input :address, label: 'Street' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5">
        <%= f.input :city %>
      </div>
      <div class="col-md-5">
        <%= f.input :state, placeholder: 'IL' %>
      </div>
      <div class="col-md-2">
        <%= f.input :zip %>
      </div>
    </div>

    <hr>

    <h5>Contact Information:</h5>
    <div class="row">
      <div class="col-md-4">
        <%= f.input :phone %>
      </div>
      <div class="col-md-4">
        <%= f.input :website %>
      </div>
      <div class="col-md-4">
        <%= f.input :email %>
      </div>
    </div>




  </div>

  <hr>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Cancel', :back, class: 'btn btn-default'  %>
  </div>
<% end %>
