<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Gym Feature #<%= @gym_feature.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Gym</dt>
              <dd><%= @gym_feature.gym_id %></dd>

              <dt>Feature</dt>
              <dd><%= @gym_feature.feature_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), gym_features_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_gym_feature_path(@gym_feature), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @gym_feature, method: :delete, data: { confirm: "Do you really want to delete this gym_feature?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
